<%= render "shared/header"%>
<div class="container-fluid">
  <div class="row">
    <%= render "shared/nav-bar"%>
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <%= render "shared/intakes_header" %>
      <%# メイン画面の内容部分 %>
      <h2>食事実績登録</h2>
      <%= form_with model: [@menu, @intake], local: true, class:"row my-3" do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <div class="row my-3 fs-5">
          <div class="col-12">
            <%= f.label :date %>
          </div>
          <div class="col">
            <%= f.date_select :date, start_year: 2021, end_year: 2021 %>
          </div>
        </div>
        <div class="row my-3 fs-5">
          <div class="col-12">        
            <%= f.label :timing_id %>
          </div>
          <div class="col">
            <%= f.collection_select(:timing_id, Timing.all, :id, :name, {}, {}) %>
          </div>
        </div>
        <div class="row my-3 fs-5">
          <div class="col-12">    
            <%= f.label :value_id %>
          </div>
          <div class="col">
            <%= f.collection_select(:value_id, Value.all, :id, :name, {}, {}) %>
          </div>
        </div>
        <div class="d-grid gap-2 col-6 my-4">
          <%= f.submit '登録する', class:"btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </main>
  </div>
</div>
<%= render "shared/footer"%>