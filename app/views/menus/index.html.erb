<%= render "shared/header"%>

  <div class="container-fluid">
    <div class="row">

      <%= render "shared/nav-bar"%>

      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">メニューリスト</h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
              <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to '新規作成（開発者用）', new_menu_path %></button>
              <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
            </div>
            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
              <span data-feather="calendar"></span>
              This week
            </button>
          </div>
        </div>

        <%# もともとタグがcanvasだったところをdivに変更した %>
        <div class="my-4 w-100" id="myChart" width="900" height="380">
          <div class="album py-5 bg-light">
            <div class="container">

              <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <% @menus.each do |menu| %>
                <div class="col">
                  <div class="card shadow-sm">
                    <%= image_tag menu.images[2].variant(resize_to_fill:[150, 150]) %>
                    <div class="card-body">
                      <%= link_to menu.title, menu_path(menu.id), class: "card-text" %>
                      <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                          <%= link_to '詳細', menu_path(menu.id), class: "btn btn-sm btn-outline-secondary" %>
                          <%= link_to '編集', edit_menu_path(menu.id), class: "btn btn-sm btn-outline-secondary" %>
                        </div>
                        <small class="text-muted">
                          <%= menu.calorie %>kcal
                        </small>
                      </div>
                    </div>
                  </div>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <h2>メニュー表</h2>
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>メニューid</th>
                <th>メニュー名</th>
                <th>分量</th>
                <th>カロリー(kcal)</th>
                <th>その他</th>
              </tr>
            </thead>
            <tbody>
            <% @menus.each do |menu| %>
              <tr>
                <td><%= menu.id %></td>
                <td><%= link_to menu.title, menu_path(menu.id) %></td>
                <td><%= menu.amount %>（<%= menu.unit %>）</td>
                <td><%= menu.calorie %></td>
                <td>other</td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </div>
  
<%= render "shared/footer"%>