<%= render "shared/header"%>

  <div class="container-fluid">
    <div class="row">

      <%= render "shared/nav-bar"%>

      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">メニューリスト</h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
              <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to '新規作成（開発者用）', new_menu_path %></button>
              <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
            </div>
            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
              <span data-feather="calendar"></span>
              This week
            </button>
          </div>
        </div>

        <canvas class="my-4 w-100" id="myChart" width="900" height="380">
        ここに自由に記述する
        </canvas>

        <h2>メニュー（表形式）</h2>
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>メニューid</th>
                <th>メニュー名</th>
                <th>分量</th>
                <th>カロリー(kcal)</th>
                <th>その他</th>
              </tr>
            </thead>
            <tbody>
            <% @menus.each do |menu| %>
              <tr>
                <td><%= menu.id %></td>
                <td><%= link_to menu.title, menu_path(menu.id) %></td>
                <td><%= menu.amount %>（<%= menu.unit %>）</td>
                <td><%= menu.calorie %></td>
                <td>other</td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </div>
  
<%= render "shared/footer"%>