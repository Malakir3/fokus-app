<%= render "shared/header"%>

  <div class="container-fluid">
    <div class="row">

      <%= render "shared/nav-bar"%>
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">

      <%= render "shared/menus_header" %>

        <%# メイン画面の内容部分 %>
        <div class="my-4 w-100" id="myChart" width="900" height="380">
          <div class="album py-5 bg-light">
            <div class="container">
              <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <% @menus.each do |menu| %>
                <div class="col">
                  <div class="card shadow-sm">
                    <%= link_to image_tag(menu.images[2].variant(resize_to_fill:[250, 250])), menu_path(menu.id) %>
                    <div class="card-title">
                      <%= link_to menu.title, menu_path(menu.id), class: "card-text" %>
                      <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                          <%= link_to '詳細', menu_path(menu.id), class: "btn btn-sm btn-outline-secondary" %>
                          <%= link_to '編集', edit_menu_path(menu.id), class: "btn btn-sm btn-outline-secondary" %>
                        </div>
                        <small class="text-muted">
                          <%= menu.calorie %>kcal
                        </small>
                      </div>
                    </div>
                  </div>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <h2>メニュー表</h2>
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>メニューid</th>
                <th>メニュー名</th>
                <th>分量</th>
                <th>カロリー(kcal)</th>
                <th>その他</th>
              </tr>
            </thead>
            <tbody>
            <% @menus.each do |menu| %>
              <tr>
                <td><%= menu.id %></td>
                <td><%= link_to menu.title, menu_path(menu.id) %></td>
                <td><%= menu.amount %>（<%= menu.unit %>）</td>
                <td><%= menu.calorie %></td>
                <td>other</td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
<%= render "shared/footer"%>