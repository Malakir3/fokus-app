<main class="form-signin">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%# <img class="mb-4" src="../assets/brand/bootstrap-logo.svg" alt="" width="72" height="57"> %>
    <h1 class="h3 mb-3 fw-normal">サインイン</h1>
      <div class="login-flash-message">
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
      <div class="field">
        <%= f.label :inputEmail, class:"visually-hidden" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "inputEmail", placeholder: "メールアドレス" %>
      </div>
      <div class="field">
        <%= f.label :inputPassword, class:"visually-hidden" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "inputPassword", placeholder: "パスワード" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="checkbox mb-3">
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
      <% end %>
        <div class="actions">
          <%= f.submit "ログイン", class:"w-100 btn btn-lg btn-primary" %>
        </div>
  <% end %>
</main>

<%= render "devise/shared/links" %>
