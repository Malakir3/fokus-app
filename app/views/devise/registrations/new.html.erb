<body class="text-center body-sign">
  <main class="text-center form-sign">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <i class="bi bi-globe2" style="font-size: 3rem; color: cornflowerblue;">Fokus</i>
      <h1 class="h3 mb-3 fw-normal">新規登録</h1>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field row">
        <div class="col">
        <%= f.label :lastname, class:"visually-hidden" %><br />
        <%= f.text_field :lastname, class: "form-control", placeholder: "苗字" %>
        </div>
        <div class="col">
          <%= f.label :firstname, class:"visually-hidden" %><br />
          <%= f.text_field :firstname, class: "form-control", placeholder: "名前" %>
        </div>
      </div>
      <div class="field">
        <%= f.label :nickname, class:"visually-hidden" %><br />
        <%= f.text_field :nickname, autofocus: true, class: "form-control", placeholder: "ニックネーム" %>
      </div>
      <div class="field d-flex justify-content-between mt-3">
        <div><%= f.label :birthday %></div>
        <div><%= f.date_select :birthday, start_year: 1920, end_year: 2021, default: Date.new(1980, 6, 15), class: "form-select" %></div>
      </div>
      <div class="field">
        <%= f.label :email, class:"visually-hidden" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
      </div>
      <div class="field mt-3 row">
        <div class="col-12">
          <%= f.label :password, class:"visually-hidden" %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード(6文字以上)" %>
        </div>
        <div class="col-12">
          <%= f.label :password_confirmation, class:"visually-hidden" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワード(確認用)" %>
        </div>
      </div>
      <div class="actions mt-3">
        <%= f.submit "新規登録", class:"w-100 btn btn-lg btn-primary" %>
      </div>
      <div class="mt-5">ユーザー登録済みの方はこちら</div>
      <div class="my-3">
        <%= link_to "ログイン画面へ", new_user_session_path, class:"w-100 btn btn-lg btn-secondary" %>
      </div>
    <% end %>
  </main>
</body>